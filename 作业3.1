package project1;

import java.util.Scanner;
//增加一个排序的功能

public class project5 {
	private static Scanner scan;
	public static double Grade[];

	public static void main(String[] args){
		int choice = menu();
		double average;
		double max;
		double min;
		while (choice!=6){
			switch(choice){
			case 1:input();break;
			case 2:
				if (Grade[0]==0){
					System.out.println("没有输入成绩，请选择1");
					break;
				}
				else
				average= getaverage();
				System.out.println("平均分＝"+average );
				break;
			case 3:if (Grade[0]==0){
				System.out.println("没有输入成绩，请选择1");
				break;
			}
			else
				max=getmax();
			System.out.println("the max number is"+max);
			break;
			case 4:if (Grade[0]==0){
				System.out.println("没有输入成绩，请选择1");
				break;
			}
			else
				min=getmin();
			System.out.println("the max number is"+min);
			break;
			case 5:
				if(Grade[0]==0) {
					System.out.println("没有输入成绩，请选择1");
					break;
				}
				else
				paixu(Grade);break;
			default:System.out.println("输入无效，重新选择！");
			}
			choice=menu();
		}
		
		System.out.println("程序退出！");
	}
	// 完成菜单的显示1-5

	public static int menu() {
		int choice = 0;
		System.out.println("====grade====");
		System.out.println("1.input");
		System.out.println("2.avg");
		System.out.println("3.max");
		System.out.println("4.min");
		System.out.println("5.paixu");
		System.out.println("6.exit");
		System.out.println("please choose 1-6");
		scan = new Scanner(System.in);
		choice = scan.nextInt();
		return choice;
	}

	public static void input() {
		Grade = new double[5];
		scan = new Scanner(System.in);
		for(int i =0;i<Grade.length;i++){
			System.out.println("请输入第"+(i+1)+"个成绩");
			boolean ok= false;
			while(!ok){
				Grade[i]=scan.nextDouble();
				if(Grade[i]<0||Grade[i]>100){
					System.out.println("成绩无效，重新输入");
				}
				else{
					ok=true;
				}
			}
			
		}
		
		

	}

	public static double getaverage() {
		double average=0;
		double sum1= 0;
		System.out.println("average grade");
		
		for(int i =0;i<Grade.length;i++){
			sum1=sum1+Grade[i];
			
		}
		average=sum1/Grade.length;
		return average;

	}

	public static double getmax() {
		double max =Grade[0];
		for(int x=0;x<Grade.length;x++){
			if(Grade[x]>max){
				max=Grade[x];
			}
			
				
		}
		return max;
		


	}
	
	public static double getmin() {
		double min =Grade[0];
		for(int x=0;x<Grade.length;x++){
			if(Grade[x]<min){
				min=Grade[x];
			}
			
		}
		return min;


	}
	public static void paixu(double Grade[]) {
		double t;
		for (int i = 0; i < Grade.length-1; i++) {
			for (int j = 0; j < Grade.length-1-i; j++) {
				if(Grade[j]>Grade[j+1]) {
					t=Grade[j];
					Grade[j]=Grade[j+1];
					Grade[j+1]=t;
				}
			}
		}
		for (int i = 0; i < Grade.length; i++) {
			System.out.println(Grade[i]);
			
		}
		
	}

	
}
